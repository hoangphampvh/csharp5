@model IEnumerable<ViewModel.ViewModel.Role.RolesVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.concurrencyStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.normalizedName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.concurrencyStamp)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.normalizedName)
                </td>
            <td>

                        @if (item.status == 0)
                        {
                                        <p>Dang Hoat Dong</p>
                        }
                        else
                        {
                                        <p>Khong Hoat Dong</p>
                        }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @using(Html.BeginForm("Delete","Role",new {item.Id})){
                        <input type="hidden" value="@item.Id" name="id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </td>
        </tr>
}
    </tbody>
</table>
